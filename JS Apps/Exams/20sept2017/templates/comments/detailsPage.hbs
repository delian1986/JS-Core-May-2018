{{>header}}
<div class="content">
    {{>navigation}}
    <section id="viewComments">
        <div class="post">
            <div class="col thumbnail">
                <a href="{{url}}">
                    <img src="{{imageUrl}}">
                </a>
            </div>
            <div class="post-content">
                <div class="title">
                    <a href="{{url}}">
                        {{title}}
                    </a>
                </div>
                <div class="details">
                    <p>Very helpful and complete info. Even includes a detailed tutorial.</p>
                    <div class="info">
                        submitted {{time}} by {{author}}
                    </div>
                    <div class="controls">
                        <ul>
                            {{#if isAuthor}}
                            <li class="action"><a class="editLink" href="#">edit</a></li>
                            <li class="action"><a class="deleteLink" href="#">delete</a></li>
                            {{/if}}
                        </ul>
                    </div>

                </div>
            </div>
            <div class="clear"></div>
        </div>
        <div class="post post-content">
            <form action="#/postComment" method="post" id="commentForm">
                <label>Comment</label>
                <textarea name="content" type="text"></textarea>
                <input type="submit" value="Add Comment" id="btnPostComment">
            </form>
        </div>
        {{#each comments}}
            {{>comment}}
        {{else}}
            <p>No comments yet</p>
        {{/each}}
    </section>
</div>
{{>footer}}