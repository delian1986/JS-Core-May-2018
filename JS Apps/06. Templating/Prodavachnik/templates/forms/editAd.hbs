{{>header}}

<section id="viewEditAd" class="viewEditAd">
    <h1 class="titleForm">Edit existing advertisement</h1>
    <form action="#/edit" method="post" id="formEditAd" class="form">
        <div><input type="hidden" name="id" value="{{_id}}" required/></div>
        <div><input type="hidden" name="views" value="{{views}}" required/></div>
        <div>Title:</div>
        <div><input type="text" name="title" value="{{title}}" required/></div>
        <div>Description:</div>
        <div><textarea name="description" rows="10" required>{{description}}</textarea></div>
        <div>Price:</div>
        <div><input type="number" step="0.01" name="price" value="{{price}}" required/></div>
        <div>Image:</div>
        <div><input type="text" name="imageUrl" value="{{imageUrl}}" required/></div>
        <div><button type="submit" class="editbtn">Edit</button></div>

    </form>
</section>

{{>footer}}