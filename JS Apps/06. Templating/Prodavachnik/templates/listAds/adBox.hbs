<div class="ad-box">
    <div class="title" data-id="{{_id}}">
        {{title}}

    </div>
    <div>
        <img src="{{imageUrl}}"/>
    </div>
    <div> Price: {{price}} | By {{publisher}}</div>
    <div>Views: {{views}}</div>
    <a class="ad-control details" href="#/details/{{_id}}" >&#9432</a>
    {{#if isAuthor}}
        <a href="#/delete/{{_id}}" class="ad-control delete">&#10006</a>
        <a href="#/edit/{{_id}}" class="ad-control edit">&#9998</a>
    {{/if}}
</div>